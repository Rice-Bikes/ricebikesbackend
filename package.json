{
  "name": "ricebikesbackend",
  "version": "1.0.14",
  "description": "An Express boilerplate backend",
  "author": "Chase Geyer",
  "repository": "Rice-Bikes/ricebikesbackend",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run",
    "prepare": "husky",
    "email": "email dev",
    "observability:test": "BACKEND_URL=${BACKEND_URL:-http://localhost:7130} bash ../observability/test/check_site.sh"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@prisma/client": "^6.6.0",
    "@react-email/components": "^0.0.33",
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fast-csv": "^5.0.2",
    "googleapis": "^144.0.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "json-schema-to-ts": "^3.1.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.0",
    "pdf-parse": "^1.1.1",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "prom-client": "^14.0.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "resend": "^4.1.2",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/multer": "^1.4.12",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^6.4.17",
    "@types/pdf-parse": "^1.1.4",
    "@types/qs": "^6.9.18",
    "@types/react": "^19.0.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "prisma": "^6.6.0",
    "react-email": "3.0.7",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": ["biome check --apply --no-errors-on-unmatched"]
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
